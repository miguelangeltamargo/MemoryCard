{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MemoryCard",
  "version": "0.5.0",
  "identifier": "com.miguel.memorycard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MemoryCard",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 500,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE3NjkxODgxMEMyMjdCNkYKUldSdmV5SU1nUmhwcC82ZlJoMnBDUWxnMUx2Q0xkSXladHhDTUYxYzI3b0lwTkdNYURNWGVQeGsK",
      "endpoints": [
        "https://github.com/miguelangeltamargo/MemoryCard/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
